<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Volume"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue Report"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="120dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 2024"
            android:layout_gravity=""
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="10dp"

            />

    </LinearLayout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="0dp">
            <TextView

                android:id="@+id/revenue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROUT1"
                android:drawableStart="@drawable/__icon__map_"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/black"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPTION"
                    android:fontFamily="@font/lato"
                    android:textSize="13sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="160dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textSize="13dp"
                    android:text="AMOUNT"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fuel Surcharge"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="168dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textSize="12dp"
                    android:text="R0.00"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tier Amount"
                    android:fontFamily="@font/lato"
                    android:textSize="12sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="180dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textSize="12dp"
                    android:text="R500.00"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:background="@color/active">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Sub Total"
                    android:textSize="15sp"
                    android:fontFamily="@font/lato"
                    android:layout_marginRight="36dp"

                    />
                <TextView
                    android:layout_marginLeft="145dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R500.00"
                    android:layout_marginTop="2dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TERR"
                android:drawableStart="@drawable/__icon__map_"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <View
