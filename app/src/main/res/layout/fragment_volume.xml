<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Volume"

    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume Report"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="120dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 2024"
            android:layout_gravity=""
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="10dp"

            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="40dp"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collections"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/penalties"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato"
                    android:text="An analysis of how many collections you have made" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Total: 10"
                                android:fontFamily="@font/lato"
                                android:textAlignment="center"
                                android:textSize="13dp"
                                android:background="@drawable/rectangle_29"/>
                            <TextView
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total: 30"
                                android:textSize="13dp"
                                android:background="@drawable/rectangle_29"
                                android:textAlignment="center"
                                android:fontFamily="@font/lato"
                                />
                        </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/volume_box"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="40dp"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliveries"
                    android:layout_marginBottom="5dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/active"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lato"
                    android:text="An analysis of how many collections you have made" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Total: 10"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:fontFamily="@font/lato"
                        android:background="@drawable/rectangle_29"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: 30"
                        android:textSize="13dp"
                        android:fontFamily="@font/lato"
                        android:background="@drawable/rectangle_29"
                        android:textAlignment="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/volume_box"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Total Volume"
                android:textSize="17sp"
                android:fontFamily="@font/lato_bold"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="80"
                android:textSize="17sp"
                android:fontFamily="@font/lato_bold"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>