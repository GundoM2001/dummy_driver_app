<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:background="@color/active"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:textSize="17sp"
            android:fontFamily="@font/lato_bold"/>

    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        android:background="@color/active"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_placeholder"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp">
                <TextView
                    android:id="@+id/disp_firstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/disp_lastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doe"
                    android:textSize="20sp"
                    android:fontFamily="@font/lato"/>
            </LinearLayout>
            <TextView
                android:id="@+id/disp_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jdoe@gmail.com"
                android:textSize="20sp"
                android:fontFamily="@font/lato"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:id="@+id/disp_cellNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textSize="20sp"
                android:fontFamily="@font/lato" />
            <TextView
                android:id="@+id/updload_profile_pic_btn"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload profile picture"
                android:textSize="20sp"
                android:textColor="@color/active"
                android:fontFamily="@font/lato"/>
            <TextView
                android:id="@+id/update_details_btn"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update details"
                android:textSize="20sp"
                android:textColor="@color/active"
                android:fontFamily="@font/lato"/>
            <TextView
                android:id="@+id/logout_button"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="20sp"
                android:textColor="@color/active"
                android:fontFamily="@font/lato"/>
            <TextView
                android:id="@+id/delete_button"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Account"
                android:textSize="20sp"
                android:textColor="@color/penalties"
                android:fontFamily="@font/lato"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>